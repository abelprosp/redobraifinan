# ============================================================================
# KAMINOCLONE - VARIÁVEIS DE AMBIENTE
# ============================================================================
# Copie este arquivo para .env e preencha com seus valores
# NUNCA commite o arquivo .env no repositório!
# ============================================================================

# ============================================================================
# AMBIENTE
# ============================================================================
APP_ENV=development
APP_PORT=8080

# ============================================================================
# POSTGRESQL
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=kamino
POSTGRES_PASSWORD=kamino_secure_password
POSTGRES_DB=kamino
POSTGRES_SSLMODE=disable

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password

# ============================================================================
# KAFKA
# ============================================================================
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=kamino-service

# ============================================================================
# CLICKHOUSE
# ============================================================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=kamino
CLICKHOUSE_PASSWORD=kamino_analytics
CLICKHOUSE_DATABASE=kamino_analytics

# ============================================================================
# VAULT (Secrets Management)
# ============================================================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=kamino-dev-token

# ============================================================================
# SICREDI - INTEGRAÇÃO BANCÁRIA
# ============================================================================
# Ambiente: sandbox ou production
SICREDI_ENVIRONMENT=sandbox

# x-api-key do Portal do Desenvolvedor Sicredi
# Obtenha em: https://developer.sicredi.com.br/api-portal
SICREDI_API_KEY=seu-api-key-aqui

# Username = CodigoBeneficiario (5 dígitos) + CodigoCooperativa (4 dígitos)
# Exemplo: Se beneficiário é 12345 e cooperativa é 0100, username = 123450100
SICREDI_USERNAME=123456789

# Código de Acesso gerado no Internet Banking
# Menu: Cobrança > Código de Acesso > Gerar
SICREDI_PASSWORD=seu-codigo-de-acesso

# Código da Cooperativa (4 dígitos)
SICREDI_COOPERATIVA=0100

# Código do Posto/Agência (2 dígitos)
SICREDI_POSTO=02

# Código do Beneficiário (5 dígitos)
SICREDI_CODIGO_BENEFICIARIO=12345

# ============================================================================
# SICREDI - SANDBOX (Valores para homologação)
# ============================================================================
# Para ambiente sandbox, use os valores abaixo:
# SICREDI_USERNAME=123456789
# SICREDI_PASSWORD=teste123
# SICREDI_COOPERATIVA=6789
# SICREDI_POSTO=03
# SICREDI_CODIGO_BENEFICIARIO=12345

# ============================================================================
# STRIPE (Opcional - para pagamentos internacionais)
# ============================================================================
STRIPE_API_KEY=sk_test_xxx
STRIPE_SECRET_KEY=xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================================================
# PLAID (Opcional - para Open Banking)
# ============================================================================
PLAID_CLIENT_ID=xxx
PLAID_SECRET=xxx

# ============================================================================
# SICOOB INTEGRATION
# ============================================================================
# Portal: https://developers.sicoob.com.br/portal/
SICOOB_CLIENT_ID=seu-client-id
SICOOB_CLIENT_SECRET=seu-client-secret
SICOOB_NUMERO_CONTRATO=12345678
SICOOB_COOPERATIVA_CODE=0001
SICOOB_ENVIRONMENT=sandbox
SICOOB_CERT_PATH=/path/to/certificado.crt
SICOOB_KEY_PATH=/path/to/chave.key
SICOOB_CHAVE_PIX=sua-chave@email.com

# ============================================================================
# OBSERVABILITY
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
LOG_LEVEL=info

# ============================================================================
# GRAFANA
# ============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ============================================================================
# SECURITY
# ============================================================================
# Chave mestre para criptografia (AES-256)
# Gere com: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=base64-encoded-32-byte-key

# JWT
JWT_PRIVATE_KEY_PATH=/app/config/keys/private.pem
JWT_PUBLIC_KEY_PATH=/app/config/keys/public.pem
JWT_ISSUER=kaminoclone
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d
